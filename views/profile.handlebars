<div class="container">
	<div class="row top-30">
		<div class="col">
			<a class="btn btn-light" href="/world">See the myths of the World</a>
		</div>

		<div class="col">
			<a class="btn btn-light" href="/deck">View my Deck</a>
		</div>

		<div class="col">
			<button id="createAvatar" type="button" class="btn btn-light" data-toggle="modal" data-target="#avatarModal">
				Create Avatar
			</button>

			<div class="card avatarCard" style="width: 15rem;">
				<img id="avatar" src="" class="card-img-top avatarStyle hidden" alt="...">
				<div class="card-body">
					<h5 class="card-title"> {{characterName}} </h5>
					<p class="card-text">Speed: </p>
					<p class="card-text">Hit Points: </p>
					<p class="card-text">Strength: </p>
					<p class="card-text">Endurance: </p>
					<p class="card-text">Armor: </p>
				</div>
			</div>
		</div>
	</div>

	<!-- Modal 1-->
	<div class="modal fade" id="avatarModal" tabindex="-1" aria-labelledby="avatarModal" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLabel">Avatar Maker</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">

					<div class="modal-split" id="modalPage1">
						<p>Choose which race you would like your avatar to be</p>
						<br>
						<button class="avatarBtn" id="human">Human</button>
						<button class="avatarBtn" id="elf">Elf</button>
						<button class="avatarBtn" id="dwarf">Dwarf</button>
					</div>

					<br>

					<div class="modal-split hidden" id="modalPage2">
						<p>Choose which weapon you would like your avatar to have</p>
						<br>
						<button class="avatarBtn" id="sword">Sword</button>
						<button class="avatarBtn" id="axe">Axe</button>
						<button class="avatarBtn" id="bow">Bow</button>

					</div>
				</div>
				<button class="btn btn-primary" id="submit">Submit</button>
			</div>
		</div>
	</div>


	<h4 id="welcome" class="label">Welcome {{characterName}} tell us your story</h4>
	<br>
	<div class="row">
		<div class="col-md-6 offset-md-3">
			<form id="myth">
				<div class="form-group">
					<label for="title">Myth Title:</label>
					<input placeholder="Myth Title" type="text" class="form-control" id="title">
					<br />
					<label for="body">Myth:</label>
					<textarea placeholder="Tell us your Myth" class="form-control" rows="3" id="body"></textarea>
					<br />
					<button type="submit" class="btn btn-success submit">Submit</button>
				</div>
			</form>

		</div>
	</div>



	<!-- create variables for each of the following tags and then append each child into their parent -->
	<h5 class="label">Myths:</h5>
	<div class="row cardLayout" id="myMyths">
		{{#each myths}}
		<div class='col-md-6'>
			<div class='card' style='width: 100%;'>
				<div class='card-body'>
					<h5 class='card-title'>{{title}}</h5>
					<p class='card-text'>{{body}}</p>
				</div>

			</div>

		</div>
		{{/each}}
	</div>




</div>
<!-- Custom Script -->
</body>
<script src="https://unpkg.com/merge-images"></script>
<script src="js/avatarMaker.js"></script>
<script src="js/profile.js" type="text/javascript"></script>